criando minha função:

public static int funcao(int x, int y, int z) {
 //entre as chaves estara a lógica da minha função
 int aux
 
 if (x > y && x > z) {
 	aux = x
 }
 else if (y > x && y > z) {
 	aux = y
 }
 else {
 	aux = z
 }
 return aux; <--ele retornara o maior numero ao meu main

